<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/participants_recyclerview_name"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="206dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/participants_recyclerview_number"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:layout_below="@id/participants_recyclerview_name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="209dp"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/participants_recyclerview_layout_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/participants_recyclerview_number"
        android:orientation="horizontal"></LinearLayout>
</RelativeLayout>